{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Crash types over years with highlight on legend click (no filtering).",
  "width": 500,
  "height": 300,
  "data": { "url": "ardd_fatal_crashes.csv" },
  "transform": [
    { "filter": "datum.Year != 2023" },
    {
      "aggregate": [{ "op": "count", "as": "CrashCount" }],
      "groupby": ["Year", "Crash Type"]
    }
  ],
  "layer": [
    {
      "mark": { "type": "area", "opacity": 0.7 },
      "params": [
        {
          "name": "typeSelect",
          "select": { "type": "point", "fields": ["Crash Type"] },
          "bind": "legend"
        }
      ],
      "encoding": {
        "x": { "field": "Year", "type": "ordinal", "title": "Year" },
        "y": {
          "field": "CrashCount",
          "type": "quantitative",
          "title": "Number of Crashes",
          "stack": null
        },
        "color": {
          "field": "Crash Type",
          "type": "nominal",
          "title": "Crash Type",
          "legend": { "orient": "top" }
        },
        "opacity": {
          "condition": { "param": "typeSelect", "value": 1 },
          "value": 0.2
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true,
        "size": 70,
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "x": { "field": "Year", "type": "ordinal" },
        "y": { "field": "CrashCount", "type": "quantitative" },
        "color": { "field": "Crash Type", "type": "nominal" },
        "opacity": {
          "condition": { "param": "typeSelect", "value": 1 },
          "value": 0.2
        },
        "tooltip": [
          { "field": "Year", "title": "Year" },
          { "field": "Crash Type", "title": "Crash Type" },
          { "field": "CrashCount", "title": "Number of Crashes" }
        ]
      }
    }
  ],
  "title": "Crash Type Comparison Over the Years"
}
